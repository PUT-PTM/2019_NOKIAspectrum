<Window x:Class="MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"
        mc:Ignorable="d"
        Title="STM32 Music Player" Height="350" Width="350">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FF1B1B1B" Offset="0"/>
                <GradientStop Color="#FF3A3737" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button HorizontalAlignment="Left" Margin="154,198,0,0" VerticalAlignment="Top" Width="45" Height="46" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <Button.OpacityMask>
                <ImageBrush ImageSource="Assets/playButton.png"/>
            </Button.OpacityMask>
            <Button.Background>
                <ImageBrush ImageSource="Assets/playButton.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button Content="Button" HorizontalAlignment="Left" Margin="109,198,0,0" VerticalAlignment="Top" Width="45" BorderBrush="{x:Null}" Foreground="{x:Null}" Height="46">
            <Button.OpacityMask>
                <ImageBrush ImageSource="Assets/pauseButton.png" Stretch="Uniform"/>
            </Button.OpacityMask>
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="Assets/pauseButton.png"/>
            </Button.Background>
        </Button>
        <Button Content="Button" HorizontalAlignment="Left" Margin="239,204,0,0" VerticalAlignment="Top" Width="35" BorderBrush="{x:Null}" Foreground="{x:Null}" Height="35">
            <Button.OpacityMask>
                <ImageBrush ImageSource="Assets/next.png" Stretch="Uniform"/>
            </Button.OpacityMask>
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="Assets/next.png"/>
            </Button.Background>
        </Button>
        <Button Content="Button" HorizontalAlignment="Left" Margin="69,204,0,0" VerticalAlignment="Top" Width="35" BorderBrush="{x:Null}" Foreground="{x:Null}" Height="35">
            <Button.OpacityMask>
                <ImageBrush ImageSource="Assets/previous.png" Stretch="Uniform"/>
            </Button.OpacityMask>
            <Button.Background>
                <ImageBrush ImageSource="Assets/previous.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button Content="Button" HorizontalAlignment="Left" Margin="204,204,0,0" VerticalAlignment="Top" Width="35" Foreground="{x:Null}" BorderBrush="{x:Null}" Height="35">
            <Button.Background>
                <ImageBrush ImageSource="Assets/stopButton.png" Stretch="Uniform"/>
            </Button.Background>
            <Button.OpacityMask>
                <ImageBrush ImageSource="Assets/stopButton.png" Stretch="Uniform"/>
            </Button.OpacityMask>
        </Button>

    </Grid>
</Window>
